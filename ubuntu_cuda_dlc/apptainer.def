BootStrap: docker
From: nvidia/cuda:11.4.3-cudnn8-runtime-ubuntu20.04

%labels
        APPLICATION_NAME cuda/cudnn/Deeplabcut in Apptainer 
        AUTHOR_NAME Joanes Grandjean
        YEAR 2023
        Version 20230323

%help
        This container is based on nivida's cuda/dudnn docker and contains deeplabcut

%environment
        PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
        LANG=C.UTF-8 LC_ALL=C.UTF-8
        DLClight=False

%post

# Install nvim and python 
        apt-get update -yy

        export DEBIAN_FRONTEND=noninteractive
        ln -fs /usr/share/zoneinfo/Europe/Amsterdam /etc/localtime
        
        apt-get -yy update

        apt-get install -yy --no-install-recommends sudo curl libgtk-3-dev python3 python3-pip python3-dev ffmpeg libsm6 libxext6 python3-wxgtk4.0 locales build-essential make cmake gcc g++ libxcb-icccm4 libxcb-image0 libxcb-keysyms1 libxcb-randr0 libxcb-render-util0 libxcb-shape0 libxkbcommon-x11-0

        export LANG=C.UTF-8 LC_ALL=C.UTF-8

# Create user
        #useradd -ms /bin/bash dlc
        #echo "dlc ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/dlc
        #chmod 0440 /etc/sudoers.d/dlc
        #su dlc

# Install Jupyter notebook
        #pip3 install --no-cache-dir --upgrade pip
        pip3 install --no-cache-dir --upgrade deeplabcut[gui,tf] numpy==1.23.1 pandas decorator "tensorflow<=2.10"
        #pip3 uninstall -y tensorboard 
        pip3 install --no-cache-dir --upgrade protobuf==3.20.1
        pip3 install --no-cache-dir --upgrade jupyter
        
        cd /usr/local/lib/python3.8/dist-packages/deeplabcut/pose_estimation_tensorflow/models/pretrained/
        curl http://download.tensorflow.org/models/resnet_v1_50_2016_08_28.tar.gz | tar xvz --no-same-owner
        curl http://download.tensorflow.org/models/resnet_v1_101_2016_08_28.tar.gz | tar xvz --no-same-owner
        curl http://download.tensorflow.org/models/resnet_v1_152_2016_08_28.tar.gz | tar xvz --no-same-owner
        chmod -R 777 ./
        
# Cleanup
        apt-get -qq clean
        rm -rf /var/lib/apt/lists/* 

%runscript
        python3 -m deeplabcut
