BootStrap: docker
From: ubuntu:latest

%labels
        APPLICATION_NAME Nvim in Apptainer 
        AUTHOR_NAME Joanes Grandjean
        YEAR 2023
        Version 2023.1.28

%help
        This container is based on ubuntu latest and contains Python 3, nvim, and nodejs to enable github copilot
        Get started with nvim in the terminal

%environment
        PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
        LANG=C.UTF-8 LC_ALL=C.UTF-8

%post

# Install nvim and python 
        cd /tmp
        
        apt-get -qq -y update

        export DEBIAN_FRONTEND=noninteractive
        ln -fs /usr/share/zoneinfo/America/New_York /etc/localtime
        
        apt-get -y update
        apt-get install -y --no-install-recommends git r-base r-base-dev software-properties-common wget python3 python3-dev python3-pip gnupg curl

        add-apt-repository ppa:neovim-ppa/stable -y

        apt-get -y update
        apt-get install -y neovim
        
        curl -sL https://deb.nodesource.com/setup_19.x -o /tmp/nodesource_setup.sh 
        bash /tmp/nodesource_setup.sh
        apt install nodejs
        apt-get install -y nodejs

        export LANG=C.UTF-8 LC_ALL=C.UTF-8

# Install Jupyter notebook

        python3 -m pip --no-cache-dir install pynvim jupyter nilearn pandas numpy matplotlib seaborn pingouin statsmodels scipy
        
# Cleanup
        apt-get -qq clean
        rm -rf /var/lib/apt/lists/* 

